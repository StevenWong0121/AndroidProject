<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/CalendarLayout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="50dp"
        android:background="@drawable/round_textbox"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.applandeo.materialcalendarview.CalendarView
            android:id="@+id/CalendarView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="50dp"
            android:animateLayoutChanges="true"
            android:dateTextAppearance="@android:style/TextAppearance.DeviceDefault.SearchResult.Title"
            app:abbreviationsBarColor="#DDD7D7"
            app:daysLabelsColor="#000"
            app:headerColor="#655C5C"
            app:headerLabelColor="#FFF"
            app:pagesColor="#DDD7D7"
            app:todayLabelColor="#127163" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>